<Window x:Class="GnomoriaEditor.SkillDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set skills" Height="147" Width="328" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Set all skills to" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="SkillValue" HorizontalAlignment="Left" Height="23" Margin="99,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72" Text="20000"/>
        <Button Content="Cancel" Margin="0,0,10,10" IsCancel="True" HorizontalAlignment="Right" Width="75" Height="22" VerticalAlignment="Bottom"/>
        <Button x:Name="OkButton" Content="OK" Margin="0,0,90,10" IsDefault="True" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="OKButton_Click"/>
        <CheckBox x:Name="MilitarySkills" Content="Military skills" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <CheckBox x:Name="ProfessionSkills" Content="Profession skills" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top" IsChecked="True"/>

    </Grid>
</Window>
